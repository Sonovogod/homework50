@model List<SeaFood>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="text-center">
    <h2>Морские продукты</h2>
</div>
<a asp-action="Create" class="my-3 btn btn-outline-info">Добавить продукт</a>
<div class="table_section">
@{
    if (!Model.Any())
    {
        <h2>Список морских продуктов пуст</h2>
    }
    else
    {
        <table class="table" style="width: 100%;">
            <tr>
                <th>#Id</th>
                <th>Наименование</th>
                <th>Вес</th>
                <th>Срок годности</th>
                <th>Цена</th>
                <th>Действие</th>
            </tr>
        @foreach (var seaFood in Model)
        {
            <tr>
                <td>@seaFood.Id</td>
                <td>@seaFood.Title</td>
                <td>@seaFood.Weight</td>
                <td>@seaFood.ExpirationDate.GetDateTimeFormats()[1]</td>
                <td>@seaFood.Coast</td>
                <td><a asp-controller="SeaFood" 
                       asp-action="FullInfo" 
                       asp-route-id="@seaFood.Id" class="my-3 btn btn-outline-info d-inline">Подробнее</a></td>
            </tr>
        }
        </table>
    }
}
</div>

